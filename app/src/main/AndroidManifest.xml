<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reciperecognition">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/abc"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeRecognition"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".review"
            android:exported="true" />
        <activity
            android:name=".custom_product_view"
            android:exported="true" />
        <activity
            android:name=".product_store_view"
            android:exported="true" />
        <activity
            android:name=".recipe"
            android:exported="true" />
        <activity
            android:name=".recipename"
            android:exported="true" />
        <activity
            android:name=".resultprediction"
            android:exported="true" />

        <uses-library
            android:name="org.apache.http.leagcy"
            android:required="false" />

        <activity
            android:name=".viewreply"
            android:exported="true" />
        <activity
            android:name=".logout"
            android:exported="true" />
        <activity
            android:name=".complaint"
            android:exported="true" />
        <activity
            android:name=".searchrecipe"
            android:exported="true" />
        <activity
            android:name=".viewrecipe"
            android:exported="true" />
        <activity
            android:name=".viewprofile"
            android:exported="true" />
        <activity
            android:name=".homepage"
            android:exported="true"
            android:label="@string/title_activity_homepage"
            android:theme="@style/Theme.RecipeRecognition.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".version"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterUser" />
    </application>

</manifest>